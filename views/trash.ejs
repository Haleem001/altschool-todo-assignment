<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="todo-wrapper">
    <div class="welcome-header">
        <h1>Trash</h1>
        <p class="subtitle">Restore or permanently delete items</p>
    </div>

    <div class="todo-list">
        <% if (todos.length > 0) { %>
            <% todos.forEach(todo => { %>
                <div class="todo-item trashed">
                    <span class="todo-text"><%= todo.title %></span>
                    <div class="actions">
                        <a href="/restore/<%= todo._id %>" class="btn-icon restore-btn" title="Restore">
                             <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 14 15 14"></polyline><polyline points="4 7 4 4 20 4 20 7"></polyline><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line><path d="M3 7h18M5 7v14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7H5z"></path><path d="M9 4v-1a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v1"></path></svg>
                        </a>
                        <a href="/delete/<%= todo._id %>" class="btn-icon delete-forever-btn" title="Delete Permanently">
                           <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6L6 18M6 6l12 12"></path></svg>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">
                <p>Trash is empty.</p>
            </div>
        <% } %>
    </div>
    <div class="back-link">
        <a href="/">&larr; Back to Tasks</a>
    </div>
</div>

<%- include('partials/footer') %>
