<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="todo-wrapper">
    <div class="welcome-header">
        <h1>Trash</h1>
        <p class="subtitle">Restore or permanently delete items</p>
    </div>

    <div class="todo-list">
        <% if (todos.length > 0) { %>
            <% todos.forEach(todo => { %>
                <div class="todo-item trashed">
                    <span class="todo-text"><%= todo.title %></span>
                    <div class="actions">
                        <a href="/restore/<%= todo._id %>" class="btn-icon restore-btn" title="Restore">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 1 0 3-6.7"></path><polyline points="3 4 3 10 9 10"></polyline></svg>
                        </a>
                        <a href="/delete/<%= todo._id %>" class="btn-icon delete-forever-btn" title="Delete Permanently">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">
                <p>Trash is empty.</p>
            </div>
        <% } %>
    </div>
    <div class="back-link">
        <a href="/">&larr; Back to Tasks</a>
    </div>
</div>

<%- include('partials/footer') %>
